<!-- Test XAML for Search and Replace Demo -->
<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search and Replace Test" Height="400" Width="600" Background="Gray">

    <StackPanel Margin="20">
        <TextBlock Text="Search and Replace Test Document" FontSize="20" FontWeight="Bold" 
                   Foreground="White" Margin="10" HorizontalAlignment="Center" />
        
        <TextBlock Text="Instructions:" FontSize="16" Foreground="Yellow" Margin="10,20,10,5" />
        <TextBlock Text="1. Press Ctrl+H to open Find and Replace dialog" FontSize="14" Foreground="LightGray" Margin="10,0" />
        <TextBlock Text="2. Try searching for 'test' and replacing with 'demo'" FontSize="14" Foreground="LightGray" Margin="10,0" />
        <TextBlock Text="3. Use 'Match case' and 'Whole word' options" FontSize="14" Foreground="LightGray" Margin="10,0" />
        
        <Border BorderBrush="White" BorderThickness="1" Margin="20" Padding="15">
            <StackPanel>
                <TextBlock Text="Sample content for testing:" FontSize="14" Foreground="White" Margin="0,0,0,10" />
                
                <!-- Test content with various cases -->
                <Label Content="Test label with test word" Background="LightBlue" Margin="5" />
                <Label Content="Another TEST in uppercase" Background="LightGreen" Margin="5" />
                <Label Content="Testing word boundaries" Background="LightCoral" Margin="5" />
                <Label Content="test at start and end test" Background="LightYellow" Margin="5" />
                
                <!-- Attributes to test -->
                <Button Content="test button" Name="TestButton" Background="Orange" Margin="5" />
                <TextBlock Text="Mixed case: Test, TEST, test, Testing" Background="Pink" Margin="5" />
            </StackPanel>
        </Border>
        
        <TextBlock Text="Try these search and replace scenarios:" FontSize="14" Foreground="Yellow" Margin="10,10,10,5" />
        <TextBlock Text="- Replace 'test' with 'demo' (case insensitive)" FontSize="12" Foreground="LightGray" Margin="15,2" />
        <TextBlock Text="- Replace 'Test' with 'Demo' (match case)" FontSize="12" Foreground="LightGray" Margin="15,2" />
        <TextBlock Text="- Replace 'test' with 'demo' (whole word only)" FontSize="12" Foreground="LightGray" Margin="15,2" />
        <TextBlock Text="- Replace 'Background' with 'Foreground' in attributes" FontSize="12" Foreground="LightGray" Margin="15,2" />
    </StackPanel>
</Window>