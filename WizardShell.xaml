<Window x:Class="RCLayoutPreview.WizardShell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Next Heat Wizard" Width="275" Height="130"
        ResizeMode="CanResize" Background="Black"
        SizeToContent="Manual" WindowStartupLocation="CenterScreen">

    <Viewbox Stretch="Fill">
        <Grid>
            <Grid.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1" SpreadMethod="Pad" ColorInterpolationMode="SRgbLinearInterpolation">
                    <GradientStop Color="#FF181616" Offset="0" />
                    <GradientStop Color="#FF000000" Offset="1" />
                    <GradientStop Color="#FF2DADD6" Offset="0.5" />
                </LinearGradientBrush>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ContentControl x:Name="StepHost" Grid.Row="0" />

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                <Button Content="Back" Click="Back_Click" Margin="5" />
                <Button Content="Next" Click="Next_Click" Margin="5" />
            </StackPanel>
        </Grid>
    </Viewbox>
</Window>
