<Window x:Class="RCLayoutPreview.FindReplaceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Find and Replace" Height="240" Width="420" ResizeMode="CanMinimize"
        WindowStartupLocation="CenterOwner" Background="#FFFDFBEA">
    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Find Row -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Find:" VerticalAlignment="Center" Margin="0,0,8,0" Width="50"/>
            <TextBox x:Name="FindTextBox" MinWidth="180" Margin="0,0,16,0"/>
            <Button x:Name="FindNextButton" Content="Find Next" Width="90"/>
        </StackPanel>

        <!-- Replace Row -->
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Replace:" VerticalAlignment="Center" Margin="0,0,8,0" Width="50"/>
            <TextBox x:Name="ReplaceTextBox" MinWidth="180" Margin="0,0,16,0"/>
            <Button x:Name="ReplaceButton" Content="Replace" Width="90"/>
        </StackPanel>

        <!-- Options -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,8">
            <CheckBox x:Name="MatchCaseCheckBox" Content="Match case" Margin="0,0,18,0"/>
            <CheckBox x:Name="WholeWordCheckBox" Content="Whole word"/>
        </StackPanel>

        <!-- Buttons and Status -->
        <DockPanel Grid.Row="3" Grid.ColumnSpan="2" LastChildFill="False" Margin="0,12,0,0">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <Button x:Name="ReplaceAllButton" Content="Replace All" Width="100" Margin="0,0,12,0"/>
                <Button x:Name="CloseButton" Content="Close" Width="80"/>
            </StackPanel>
            <TextBlock x:Name="StatusTextBlock" Foreground="#BBAA88" FontSize="13" Margin="18,0,0,0" VerticalAlignment="Center" Text="Ready" DockPanel.Dock="Right"/>
        </DockPanel>
    </Grid>
</Window>
