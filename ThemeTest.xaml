<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ThemeDictionary Auto-Reload Test (StaticResource)"
        Height="400" Width="600"
        Background="Black">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ThemeDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="?? ThemeDictionary Auto-Reload Test (StaticResource)" FontSize="24" FontWeight="Bold"
                       Foreground="White" Margin="10" HorizontalAlignment="Center" />

            <TextBlock Text="The labels below use StaticResource and should change color when the XAML is re-parsed automatically"
                       FontSize="14" Foreground="LightGray" Margin="10" HorizontalAlignment="Center" />

            <!-- RSValueColor Test -->
            <Border BorderBrush="White" BorderThickness="1" Margin="10" Padding="10">
                <StackPanel>
                    <TextBlock Text="RSValueColor Test:" FontSize="16" Foreground="White" Margin="0,0,0,5" />
                    <Label Content="This should be BLUE initially" FontSize="20" FontWeight="Bold"
                           Foreground="{StaticResource RSValueColor}"
                           Background="{StaticResource RSTableCellBackground}"
                           Padding="15" HorizontalAlignment="Center"
                           ToolTip="Edit ThemeDictionary.xaml: change RSValueColor from Blue to Red" />
                </StackPanel>
            </Border>

            <!-- RSLabelColor Test -->
            <Border BorderBrush="White" BorderThickness="1" Margin="10" Padding="10">
                <StackPanel>
                    <TextBlock Text="RSLabelColor Test:" FontSize="16" Foreground="White" Margin="0,0,0,5" />
                    <Label Content="This should be WHITE" FontSize="20" FontWeight="Bold"
                           Foreground="{StaticResource RSLabelColor}"
                           Background="{StaticResource RSTableCellBackground}"
                           Padding="15" HorizontalAlignment="Center"
                           ToolTip="This uses RSLabelColor (should be white)" />
                </StackPanel>
            </Border>

            <TextBlock Text="?? Instructions: Edit ThemeDictionary.xaml and change RSValueColor from 'Blue' to 'Red'"
                       FontSize="14" Foreground="Yellow" Margin="10" HorizontalAlignment="Center" />
            <TextBlock Text="The system will detect the file change and automatically re-parse the XAML with new resources!"
                       FontSize="14" Foreground="LightGray" Margin="5" HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>